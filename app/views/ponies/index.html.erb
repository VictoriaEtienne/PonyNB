<%= render "shared/banner" %>
<div class="container">

  <div class="row grid-template-rows: auto;h justify-content-center">
    <div class="title h2">
      <h2>All our ponies for rent</h2>
    </div>
      <div class="search col-sm-6 my-3;">
        <%= form_with url: ponies_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a pony name or a price"
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-outline-success" %>
        <% end %>
      </div>
  </div>
  <div class="row grid-template-rows: auto;h">
    <div class="col-sm-12 my-3">
    <%= render "shared/pony_card" %>
    </div>
  </div>
</div>
















