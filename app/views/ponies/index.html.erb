<%= render "shared/banner" %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: ponies_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a pony name"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-1">
      <div class="cards">
        <% @ponies.each do |pony| %>
        <div class="card d-flex align-items-center" style="width: 18rem;">
          <% if pony.photo.attached? %>
          <%= cl_image_tag pony.photo.key, class: "small-pony-image" %>
          <% else %>
          <%= image_tag "/assets/pony_one.jpg", class: "small-pony-image" %>
          <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= pony.name%></h5>
          <p class="card-text"><%= pony.price%>$</p>
          <p class="card-text-description"><%= pony.description%></p>
          <%= link_to "Rent this pony", pony_path(pony), class:"btn btn-outline-success"%>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
