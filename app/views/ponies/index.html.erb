<%= render "shared/banner" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Ponies</h1>
      <ul class="list-group mb-3">
        <% @ponies.each do |pony| %>
          <li class="list-group-item">
            <%= link_to pony.name, pony_path(pony) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
