<div class="card">
  <div class="card-body container-listing">
    <div class="row listing-content">
      <!-- Details box -->
      <div class="listing col-md-6">
        <div class="listing-info">
          <div class="pony-details">
            <h3 class="pony-name"><strong><%= @pony.name %></strong></h3>
            <div class="image-wrapper">
              <%= image_tag "/assets/pony_one.jpg", class: "small-pony-image" %>
            </div>
          </div>
          <ul class="details-list">
            <li><strong>Description:</strong> <%= @pony.description %></li>
            <li><strong>Price:</strong> <%= @pony.price %></li>
            <li><strong>Alias:</strong> <%= @pony.alias %></li>
            <li><strong>Sex:</strong> <%= @pony.sex %></li>
            <li><strong>Color:</strong> <%= @pony.color %></li>
            <li><strong>Discipline:</strong> <%= @pony.discipline %></li>
            <li><strong>Breed:</strong> <%= @pony.breed %></li>
            <li><strong>Address:</strong> <%= @pony.address %></li>
          </ul>
        </div>
      </div>
      <div class="col-6">
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= simple_form_for [@pony, @booking], html:{ class: "form-inline"} do |f| %>
          <%= f.input :start_time,
                as: :string,
                input_html: { data: { controller: "datepicker" }, style: "display: none" } %>
          <%= f.input :end_time,
                as: :string,
                input_html: { data: { controller: "datepicker" }, style: "display: none" } %>
          <%= f.button :submit, class: "btn btn-primary btn-block", style: "margin-top: 20px;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
