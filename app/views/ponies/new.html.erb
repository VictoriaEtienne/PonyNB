<h1>Ponies#new</h1>
<p>Find me in app/views/ponies/new.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new pony</h1>
      <%= simple_form_for @pony do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :alias %>
        <%= f.input :sex %>
        <%= f.input :color %>
        <%= f.input :discipline %>
        <%= f.input :breed %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Back to the homepage", ponies_path %>
    </div>
  </div>
</div>
