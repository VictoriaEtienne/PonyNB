<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('data_base_img/pony_23.jpg') %>)">
  <h1>Rent your pony</h1>
</div>

<div class="outer-container">
  <div class="new-container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>Enter your pony details</h2>
        <%= simple_form_for @pony do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%#= f.input :alias %>
          <%= f.input :sex, collection: ["Male", "Female"], include_blank: false %>
          <%= f.input :color, collection: [["White", "white"], ["Brown", "brown"], ["Dark", "dark"]], as: :radio_buttons, include_blank: false %>
          <%= f.input :discipline, collection: ["Ride", "Circus", "Dance", "Obstacle"], include_blank: false %>
          <%= f.input :breed, collection: ["Pony", "Double-Pony", "Unicorn", "Pur-Sang"], include_blank: false %>
          <%= f.input :photo, as: :file %>
          <%= f.input :address, input_html: { data: { controller: "address-autocomplete" } } %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
        <%= link_to "Back to the homepage", ponies_path %>
      </div>
    </div>
  </div>
</div>
